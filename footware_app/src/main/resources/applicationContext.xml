<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean class="com.xworkz.Footwear" id="footwear" >
	<constructor-arg name="brand" value="Puma" />
	<constructor-arg name="color" value="Black" />
	<constructor-arg name="price" value="3000.0" />
	<constructor-arg name="material" ref="materialId" />
	</bean>
	
	<bean class="com.xworkz.Material" id="materialId" >
	<constructor-arg name="leather" value="Crocod" />
	<constructor-arg name="rubber" value="natural" />
	<constructor-arg name="cloth" value="woolen_Silk" />
	</bean>
	
	
</beans>
 


